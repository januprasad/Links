
<table id="links" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>URL</th>
      <th colspan="3">Actions</th>         
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.id %></td>
        <td><%= link.title %></td>
        <td><%= link.url %></td> 
        <td>
          <%= link_to "Show", link_path(link.id), class: "btn btn-primary btn-sm" %>
        </td>  
        <td>
          <%= link_to "Edit", edit_link_path(link.id), method: :get, class: "btn btn-warning btn-sm" %>
        </td>       
        <td>
          <%= link_to "Delete", link_path(link.id), method: :delete,  data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm"  %>          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Link', create_link_path, class: "btn btn-success"  %>
